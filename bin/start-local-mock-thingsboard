#!/usr/bin/env python
"""
Send a POST request::
    curl -d "foo=bar&bin=baz" http://localhost
"""
import json
import os
import sys

from BaseHTTPServer import BaseHTTPRequestHandler, HTTPServer

# So we can import from parent directory
sys.path.insert(1, os.path.join(sys.path[0], '..'))
from backend import oracle

# Set T_STAGE to dev so that we don't use prod version of the infrastructure
os.environ["T_STAGE"] = "dev"


class LocalApiGatewayHandler(BaseHTTPRequestHandler):

    def _set_headers(self):
        self.send_response(200)
        self.send_header('Content-type', 'text/html')
        self.end_headers()

    def do_POST(self):
        self._set_headers()
        self.wfile.write("Data received.")


def run(server_class=HTTPServer, handler_class=LocalApiGatewayHandler, port=9999):
    server_address = ('', port)
    httpd = server_class(server_address, handler_class)
    print "Starting mock thingsboard..."
    httpd.serve_forever()

if __name__ == "__main__":
    from sys import argv

    if len(argv) == 2:
        run(port=int(argv[1]))
    else:
        run()
