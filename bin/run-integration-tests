#!/usr/bin/env python

import json
import os
import requests
import sys
import time
import unittest

# So we can import from parent directory
sys.path.insert(1, os.path.join(sys.path[0], '..'))
from backend import data
from backend.db import db

database = db.get_db()

DEV_PORT = '8888'

# API_GATEWAY_URL = "https://api.tumalow.com/status/dev"
stage = os.getenv('T_STAGE', 'dev')
if stage == 'dev':
    api_gateway_url = "http://localhost:" + DEV_PORT
elif stage == 'prod':
    api_gateway_url = "https://api.tumalow.com/status/dev"
else:
    print('Invalid stage: ' + stage)
    raise


def send_status(output):
    usage_data = json.dumps(
        data._build_tumalow_packet(output, 10.0, time.time()))

    r = requests.post(api_gateway_url, data=usage_data)
    raw_response = r.json()
    response = json.loads(raw_response)

    return response["power"]


class TestIntegrationOracle(unittest.TestCase):

    def test_orders(self):
        initial_count = database.count_items()
        self.assertEqual(send_status(-1), -1)
        self.assertEqual(
            1, database.count_items() - initial_count)

        self.assertEqual(send_status(0), 0)
        self.assertEqual(
            2, database.count_items() - initial_count)

        self.assertEqual(send_status(1), 1)
        self.assertEqual(
            3, database.count_items() - initial_count)


unittest.main()
print("Integration Tests")
